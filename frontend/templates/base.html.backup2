                        <a href="/ca" class="nav-link {% if request.path.startswith('/ca') %}active{% endif %} px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-200 hover:bg-white/50 dark:hover:bg-gray-700/50">
                            <i class="fas fa-certificate mr-2"></i>CAs
                        </a>
                        <a href="/certificates" class="nav-link {% if request.path.startswith('/certificates') %}active{% endif %} px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-200 hover:bg-white/50 dark:hover:bg-gray-700/50">
                            <i class="fas fa-file-certificate mr-2"></i>Certificates
