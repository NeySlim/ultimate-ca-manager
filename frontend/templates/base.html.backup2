<!DOCTYPE html>
<html lang="en" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true' }" 
      :class="{ 'dark': darkMode }">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Ultimate CA Manager{% endblock %}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="{{ url_for('static', filename='favicon.svg') }}">
    
    <!-- Tailwind CSS (CDN for development - consider building for production) -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        // Suppress Tailwind CDN warning in production
        (function() {
            const originalWarn = console.warn;
            console.warn = function(...args) {
                const message = args[0] || '';
                if (typeof message === 'string' && message.includes('cdn.tailwindcss.com')) {
                    return; // Suppress Tailwind CDN warning
                }
                originalWarn.apply(console, args);
            };
        })();
        
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        },
                        accent: {
                            500: '#8b5cf6',
                            600: '#7c3aed',
                        }
                    }
                }
            }
        }
    </script>

<!-- Adminto-Inspired Professional Theme for UCM -->
<!-- Modern, clean, professional admin dashboard -->

<script>
    tailwind.config = {
        darkMode: 'class',
        theme: {
            extend: {
                colors: {
                    // Adminto color palette
                    primary: {
                        50: '#f0f9ff',
                        100: '#e0f2fe',
                        200: '#bae6fd',
                        300: '#7dd3fc',
                        400: '#38bdf8',
                        500: '#0ea5e9',  // Sky blue
                        600: '#0284c7',
                        700: '#0369a1',
                        800: '#075985',
                        900: '#0c4a6e',
                    },
                    secondary: {
                        50: '#faf5ff',
                        100: '#f3e8ff',
                        200: '#e9d5ff',
                        300: '#d8b4fe',
                        400: '#c084fc',
                        500: '#a855f7',  // Purple
                        600: '#9333ea',
                        700: '#7e22ce',
                        800: '#6b21a8',
                        900: '#581c87',
                    },
                    success: {
                        500: '#10b981',
                        600: '#059669',
                    },
                    danger: {
                        500: '#ef4444',
                        600: '#dc2626',
                    },
                    warning: {
                        500: '#f59e0b',
                        600: '#d97706',
                    },
                    // Dark theme colors (Adminto dark)
                    dark: {
                        bg: '#1a1d2e',        // Main dark background
                        card: '#222736',      // Card background
                        border: '#2f3349',    // Border color
                        text: '#adb5bd',      // Text color
                        heading: '#ced4da',   // Heading color
                        sidebar: '#1f2330',   // Sidebar background
                    },
                    // Light theme
                    light: {
                        bg: '#fafbfe',
                        card: '#ffffff',
                        border: '#e3e6ef',
                        text: '#6c757d',
                        heading: '#313a46',
                        sidebar: '#ffffff',
                    }
                },
                fontFamily: {
                    sans: ['Nunito', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'sans-serif'],
                },
                boxShadow: {
                    'card': '0 0 35px 0 rgba(154,161,171,.15)',
                    'card-hover': '0 0 45px 0 rgba(154,161,171,.25)',
                },
            }
        }
    }
</script>

<!-- Google Fonts - Nunito (Adminto uses Nunito) -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">

<style>
    /* ============================================ */
    /* ADMINTO INSPIRED PROFESSIONAL THEME */
    /* ============================================ */
    
    /* Base Reset & Typography */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.5;
        color: #6c757d;
        background: #fafbfe;
        overflow-x: hidden;
    }
    
    .dark body {
        background: #1a1d2e;
        color: #adb5bd;
    }
    
    /* Typography - Adminto style */
    h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        color: #313a46;
        margin-bottom: 0.5rem;
    }
    
    .dark h1, .dark h2, .dark h3, .dark h4, .dark h5, .dark h6 {
        color: #ced4da;
    }
    
    h1 { font-size: 2.25rem; }
    h2 { font-size: 1.875rem; }
    h3 { font-size: 1.5rem; }
    h4 { font-size: 1.125rem; }
    h5 { font-size: 1rem; }
    h6 { font-size: 0.875rem; }
    
    /* ============================================ */
    /* LAYOUT - Adminto Structure */
    /* ============================================ */
    
    /* Header/Navbar - Compact like Adminto */
    .navbar {
        background: #ffffff;
        border-bottom: 1px solid #e3e6ef;
        height: 70px;
        box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 0 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .dark .navbar {
        background: #222736;
        border-bottom: 1px solid #2f3349;
    }
    
    /* Sidebar - Adminto left sidebar */
    .sidebar {
        position: fixed;
        top: 70px;
        left: 0;
        width: 260px;
        height: calc(100vh - 70px);
        background: #ffffff;
        border-right: 1px solid #e3e6ef;
        overflow-y: auto;
        overflow-x: hidden;
        z-index: 999;
        box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
    }
    
    .dark .sidebar {
        background: #1f2330;
        border-right: 1px solid #2f3349;
    }
    
    /* Sidebar scrollbar */
    .sidebar::-webkit-scrollbar {
        width: 6px;
    }
    
    .sidebar::-webkit-scrollbar-track {
        background: transparent;
    }
    
    .sidebar::-webkit-scrollbar-thumb {
        background: rgba(154,161,171,.3);
        border-radius: 3px;
    }
    
    .sidebar::-webkit-scrollbar-thumb:hover {
        background: rgba(154,161,171,.5);
    }
    
    /* Main content area */
    .main-content {
        margin-left: 260px;
        margin-top: 70px;
        padding: 30px 24px;
        min-height: calc(100vh - 70px);
        background: #fafbfe;
    }
    
    .dark .main-content {
        background: #1a1d2e;
    }
    
    /* ============================================ */
    /* SIDEBAR NAVIGATION - Adminto style */
    /* ============================================ */
    
    .sidebar-nav {
        padding: 20px 0;
    }
    
    .nav-title {
        padding: 12px 24px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #98a6ad;
        margin-top: 10px;
    }
    
    .dark .nav-title {
        color: #6c757d;
    }
    
    .nav-link {
        display: flex;
        align-items: center;
        padding: 12px 24px;
        color: #6c757d;
        text-decoration: none;
        transition: all 0.2s;
        position: relative;
        font-size: 14px;
        font-weight: 600;
    }
    
    .dark .nav-link {
        color: #adb5bd;
    }
    
    .nav-link i {
        width: 20px;
        margin-right: 12px;
        font-size: 16px;
        text-align: center;
    }
    
    .nav-link:hover {
        background: rgba(14,165,233,0.06);
        color: #0ea5e9;
    }
    
    .dark .nav-link:hover {
        background: rgba(14,165,233,0.1);
        color: #0ea5e9;
    }
    
    .nav-link.active {
        background: rgba(14,165,233,0.1);
        color: #0ea5e9;
        border-left: 3px solid #0ea5e9;
        font-weight: 700;
    }
    
    .dark .nav-link.active {
        background: rgba(14,165,233,0.15);
    }
    
    /* ============================================ */
    /* CARDS - Adminto card style */
    /* ============================================ */
    
    .card {
        background: #ffffff;
        border: 1px solid #e3e6ef;
        border-radius: 0.25rem;
        box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
        margin-bottom: 24px;
        transition: all 0.2s;
    }
    
    .dark .card {
        background: #222736;
        border-color: #2f3349;
    }
    
    .card:hover {
        box-shadow: 0 0 45px 0 rgba(154,161,171,.25);
    }
    
    .card-header {
        padding: 20px 24px;
        border-bottom: 1px solid #e3e6ef;
        background: transparent;
    }
    
    .dark .card-header {
        border-bottom-color: #2f3349;
    }
    
    .card-body {
        padding: 24px;
    }
    
    .card-title {
        font-size: 16px;
        font-weight: 700;
        color: #313a46;
        margin-bottom: 0;
    }
    
    .dark .card-title {
        color: #ced4da;
    }
    
    /* ============================================ */
    /* STAT CARDS - Adminto dashboard widgets */
    /* ============================================ */
    
    .stat-card {
        background: #ffffff;
        border: 1px solid #e3e6ef;
        border-radius: 0.25rem;
        padding: 24px;
        box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
        transition: all 0.2s;
    }
    
    .dark .stat-card {
        background: #222736;
        border-color: #2f3349;
    }
    
    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 0 45px 0 rgba(154,161,171,.25);
    }
    
    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 0.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-bottom: 12px;
    }
    
    .stat-icon.primary {
        background: rgba(14,165,233,0.1);
        color: #0ea5e9;
    }
    
    .stat-icon.success {
        background: rgba(16,185,129,0.1);
        color: #10b981;
    }
    
    .stat-icon.warning {
        background: rgba(245,158,11,0.1);
        color: #f59e0b;
    }
    
    .stat-icon.danger {
        background: rgba(239,68,68,0.1);
        color: #ef4444;
    }
    
    .stat-value {
        font-size: 28px;
        font-weight: 700;
        color: #313a46;
        margin-bottom: 4px;
    }
    
    .dark .stat-value {
        color: #ced4da;
    }
    
    .stat-label {
        font-size: 13px;
        color: #98a6ad;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
    
    /* ============================================ */
    /* BUTTONS - Adminto button styles */
    /* ============================================ */
    
    .btn {
        display: inline-block;
        padding: 8px 20px;
        font-size: 14px;
        font-weight: 600;
        line-height: 1.5;
        text-align: center;
        text-decoration: none;
        border: 1px solid transparent;
        border-radius: 0.25rem;
        transition: all 0.15s;
        cursor: pointer;
    }
    
    .btn-primary {
        background: #0ea5e9;
        color: #ffffff;
        border-color: #0ea5e9;
    }
    
    .btn-primary:hover {
        background: #0284c7;
        border-color: #0284c7;
    }
    
    .btn-secondary {
        background: #6c757d;
        color: #ffffff;
        border-color: #6c757d;
    }
    
    .btn-secondary:hover {
        background: #5a6268;
        border-color: #545b62;
    }
    
    .btn-success {
        background: #10b981;
        color: #ffffff;
        border-color: #10b981;
    }
    
    .btn-success:hover {
        background: #059669;
        border-color: #059669;
    }
    
    .btn-danger {
        background: #ef4444;
        color: #ffffff;
        border-color: #ef4444;
    }
    
    .btn-danger:hover {
        background: #dc2626;
        border-color: #dc2626;
    }
    
    .btn-outline-primary {
        background: transparent;
        color: #0ea5e9;
        border-color: #0ea5e9;
    }
    
    .btn-outline-primary:hover {
        background: #0ea5e9;
        color: #ffffff;
    }
    
    .btn-sm {
        padding: 4px 12px;
        font-size: 13px;
    }
    
    .btn-lg {
        padding: 12px 28px;
        font-size: 16px;
    }
    
    /* ============================================ */
    /* FORMS - Adminto input styles */
    /* ============================================ */
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-label {
        display: block;
        margin-bottom: 6px;
        font-size: 14px;
        font-weight: 600;
        color: #313a46;
    }
    
    .dark .form-label {
        color: #ced4da;
    }
    
    .form-control {
        display: block;
        width: 100%;
        padding: 8px 12px;
        font-size: 14px;
        line-height: 1.5;
        color: #6c757d;
        background: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        transition: all 0.15s;
    }
    
    .dark .form-control {
        background: #2b3142;
        border-color: #404656;
        color: #adb5bd;
    }
    
    .form-control:focus {
        outline: none;
        border-color: #0ea5e9;
        box-shadow: 0 0 0 3px rgba(14,165,233,0.1);
    }
    
    .form-control::placeholder {
        color: #98a6ad;
    }
    
    /* ============================================ */
    /* TABLES - Adminto table design */
    /* ============================================ */
    
    .table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }
    
    .table thead {
        background: #f1f3fa;
        border-bottom: 2px solid #e3e6ef;
    }
    
    .dark .table thead {
        background: #2b3142;
        border-bottom-color: #404656;
    }
    
    .table thead th {
        padding: 12px 16px;
        font-weight: 700;
        color: #313a46;
        text-align: left;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
    }
    
    .dark .table thead th {
        color: #ced4da;
    }
    
    .table tbody td {
        padding: 12px 16px;
        border-bottom: 1px solid #f1f3fa;
        color: #6c757d;
    }
    
    .dark .table tbody td {
        border-bottom-color: #2b3142;
        color: #adb5bd;
    }
    
    .table tbody tr:hover {
        background: #fafbfe;
    }
    
    .dark .table tbody tr:hover {
        background: #222736;
    }
    
    /* ============================================ */
    /* BADGES - Adminto badge styles */
    /* ============================================ */
    
    .badge {
        display: inline-block;
        padding: 4px 10px;
        font-size: 11px;
        font-weight: 600;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
        text-transform: uppercase;
        letter-spacing: 0.3px;
    }
    
    .badge-primary {
        background: rgba(14,165,233,0.15);
        color: #0ea5e9;
    }
    
    .badge-success {
        background: rgba(16,185,129,0.15);
        color: #10b981;
    }
    
    .badge-warning {
        background: rgba(245,158,11,0.15);
        color: #f59e0b;
    }
    
    .badge-danger {
        background: rgba(239,68,68,0.15);
        color: #ef4444;
    }
    
    .badge-secondary {
        background: rgba(108,117,125,0.15);
        color: #6c757d;
    }
    
    /* ============================================ */
    /* ALERTS - Adminto alert styles */
    /* ============================================ */
    
    .alert {
        padding: 12px 16px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 0.25rem;
        font-size: 14px;
    }
    
    .alert-primary {
        background: rgba(14,165,233,0.1);
        border-color: rgba(14,165,233,0.2);
        color: #0369a1;
    }
    
    .alert-success {
        background: rgba(16,185,129,0.1);
        border-color: rgba(16,185,129,0.2);
        color: #047857;
    }
    
    .alert-warning {
        background: rgba(245,158,11,0.1);
        border-color: rgba(245,158,11,0.2);
        color: #b45309;
    }
    
    .alert-danger {
        background: rgba(239,68,68,0.1);
        border-color: rgba(239,68,68,0.2);
        color: #b91c1c;
    }
    
    /* ============================================ */
    /* BREADCRUMBS - Adminto style */
    /* ============================================ */
    
    .breadcrumb {
        display: flex;
        flex-wrap: wrap;
        padding: 0;
        margin: 0 0 20px;
        list-style: none;
        background: transparent;
        font-size: 13px;
    }
    
    .breadcrumb-item {
        color: #98a6ad;
    }
    
    .breadcrumb-item + .breadcrumb-item::before {
        content: '/';
        padding: 0 8px;
        color: #98a6ad;
    }
    
    .breadcrumb-item.active {
        color: #313a46;
    }
    
    .dark .breadcrumb-item.active {
        color: #ced4da;
    }
    
    /* ============================================ */
    /* PAGE HEADER - Adminto page title area */
    /* ============================================ */
    
    .page-header {
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .page-title {
        font-size: 20px;
        font-weight: 700;
        color: #313a46;
        margin-bottom: 4px;
    }
    
    .dark .page-title {
        color: #ced4da;
    }
    
    .page-title-sub {
        font-size: 13px;
        color: #98a6ad;
    }
    
    /* ============================================ */
    /* DROPDOWNS - Adminto dropdown menu */
    /* ============================================ */
    
    .dropdown-menu {
        min-width: 200px;
        padding: 8px 0;
        background: #ffffff;
        border: 1px solid #e3e6ef;
        border-radius: 0.25rem;
        box-shadow: 0 0 35px 0 rgba(154,161,171,.15);
    }
    
    .dark .dropdown-menu {
        background: #222736;
        border-color: #2f3349;
    }
    
    .dropdown-item {
        padding: 8px 20px;
        font-size: 14px;
        color: #6c757d;
        text-decoration: none;
        display: block;
        transition: all 0.15s;
    }
    
    .dark .dropdown-item {
        color: #adb5bd;
    }
    
    .dropdown-item:hover {
        background: #f1f3fa;
        color: #313a46;
    }
    
    .dark .dropdown-item:hover {
        background: #2b3142;
        color: #ced4da;
    }
    
    /* ============================================ */
    /* UTILITIES */
    /* ============================================ */
    
    /* Text colors */
    .text-muted {
        color: #98a6ad !important;
    }
    
    .text-primary {
        color: #0ea5e9 !important;
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .text-danger {
        color: #ef4444 !important;
    }
    
    .text-warning {
        color: #f59e0b !important;
    }
    
    /* Background colors */
    .bg-primary {
        background: #0ea5e9 !important;
    }
    
    .bg-light {
        background: #f1f3fa !important;
    }
    
    .dark .bg-light {
        background: #2b3142 !important;
    }
    
    /* Spacing utilities */
    .mb-0 { margin-bottom: 0 !important; }
    .mb-1 { margin-bottom: 8px !important; }
    .mb-2 { margin-bottom: 16px !important; }
    .mb-3 { margin-bottom: 24px !important; }
    .mb-4 { margin-bottom: 32px !important; }
    
    .mt-0 { margin-top: 0 !important; }
    .mt-1 { margin-top: 8px !important; }
    .mt-2 { margin-top: 16px !important; }
    .mt-3 { margin-top: 24px !important; }
    .mt-4 { margin-top: 32px !important; }
    
    /* ============================================ */
    /* ANIMATIONS & TRANSITIONS */
    /* ============================================ */
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .fade-in {
        animation: fadeIn 0.3s ease-out;
    }
    
    /* Loading spinner */
    .spinner-border {
        width: 32px;
        height: 32px;
        border: 3px solid rgba(14,165,233,0.2);
        border-top-color: #0ea5e9;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }
    
    @keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    /* ============================================ */
    /* RESPONSIVE */
    /* ============================================ */
    
    @media (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s;
        }
        
        .sidebar.show {
            transform: translateX(0);
        }
        
        .main-content {
            margin-left: 0;
        }
    }
</style>

<!-- Remove old gradient-bg and glass styles -->
<style>
    /* Override previous theme styles */
    .gradient-bg {
        background: none !important;
    }
    
    .glass {
        background: none !important;
        backdrop-filter: none !important;
        border: none !important;
    }
</style>


    
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        [x-cloak] { display: none !important; }
        
        /* Gradient background */
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .dark .gradient-bg {
            background: linear-gradient(135deg, #1e3a8a 0%, #581c87 100%);
        }
        
        /* Glass morphism effect */
        .glass {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }
        
        .dark .glass {
            background: rgba(17, 24, 39, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        /* Smooth hover transitions */
        .nav-link {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }
        
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }
        
        .nav-link:hover::after {
            width: 100%;
        }
        
        .nav-link.active::after {
            width: 100%;
        }
        
        /* Card hover effects */
        .card-hover {
            transition: all 0.3s ease;
        }
        
        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        
        /* Button gradient */
        .btn-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
        }
        
        .btn-gradient:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
        }
    </style>
    
    {% block extra_head %}{% endblock %}
</head>
<body class="bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800 text-gray-900 dark:text-gray-100 transition-colors duration-200 min-h-screen">
    
