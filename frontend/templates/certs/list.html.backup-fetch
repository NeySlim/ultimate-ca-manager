{% extends "base.html" %}

{% block title %}Certificates - UCM{% endblock %}

{% block content %}
<div style="display: flex; flex-direction: column; gap: 1.5rem;">
    <!-- Header -->
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1 style="font-size: 1.875rem; font-weight: 600; color: var(--text-primary); margin: 0; display: flex; align-items: center; gap: 0.5rem;">
            <svg class="ucm-icon" width="24" height="24"><use href="#icon-certificate"/></svg>
            <span>Certificates</span>
        </h1>
        <div style="display: flex; gap: 0.5rem;">
            <button data-action="open-create-cert-modal"
                    class="btn-primary">
                <svg class="ucm-icon" width="16" height="16"><use href="#icon-plus"/></svg>
                <span>Create Certificate</span>
            </button>
            <button data-action="open-csr-modal"
                    class="btn-primary">
                <svg class="ucm-icon" width="16" height="16"><use href="#icon-file-signature"/></svg>
                <span>Generate CSR</span>
            </button>
        </div>
    </div>
    
    <!-- Certificate List -->
    <div class="card" style="padding: 0;">
        <div id="cert-list" 
             hx-get="/api/ui/cert/list" 
             hx-trigger="load, refreshCerts from:body"
             hx-swap="innerHTML">
            <div style="padding: 2rem; text-align: center;">
                <div style="animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite; display: flex; flex-direction: column; gap: 1rem;">
                    <div style="height: 1rem; background: var(--border-color); border-radius: 0.25rem;"></div>
                    <div style="height: 1rem; background: var(--border-color); border-radius: 0.25rem;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Certificate Modal -->
<div id="createCertModal" class="hidden" style="position: fixed; inset: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;">
    <div onclick="event.stopPropagation()" style="background: var(--card-bg); border-radius: 0.5rem; max-width: 750px; width: 90%; max-height: 90vh; overflow-y: auto; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.25);">
        <div class="card-header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h2 style="font-size: 1.5rem; font-weight: bold; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                    <svg class="ucm-icon" width="24" height="24"><use href="#icon-plus"/></svg>
                    <span>Create Certificate</span>
                </h2>
                <button data-action="close-cert-modal" style="color: var(--text-secondary); cursor: pointer; background: none; border: none;">
                    <svg class="ucm-icon" width="20" height="20"><use href="#icon-times"/></svg>
                </button>
            </div>
        </div>
        
        <form hx-post="/api/ui/cert/create"
              hx-trigger="submit"
              hx-disabled-elt="find button[type='submit']"
              hx-on::after-request="if(event.detail.successful){closeCertModal();htmx.trigger('body','refreshCerts');if(typeof showToast==='function')showToast('Certificate created','success');}">
            <div style="padding: 1.5rem;">
                
                <!-- Template Selection (Optional) -->
                <div style="margin-bottom: 1.5rem; padding: 1rem; background: var(--info-bg, rgba(59, 130, 246, 0.1)); border-left: 4px solid var(--info-color, #3b82f6); border-radius: 0.375rem;">
                    <div style="display: flex; align-items: start; gap: 0.5rem;">
                        <svg class="ucm-icon" width="20" height="20" style="margin-top: 0.125rem; flex-shrink: 0;"><use href="#icon-info-circle"/></svg>
                        <div style="flex: 1;">
                            <h3 style="font-weight: 600; color: var(--text-primary); margin: 0 0 0.5rem 0; font-size: 0.875rem;">Use a Template (Optional)</h3>
                            <select id="cert-template-select" name="template_id" onchange="applyCertTemplate(this.value)"
                                    class="modal-form-input" style="margin-bottom: 0.5rem;">
                                <option value="">-- No template (manual configuration) --</option>
                            </select>
                            <p style="margin: 0; font-size: 0.75rem; color: var(--text-muted);">
                                Select a template to auto-fill fields with recommended values, or configure manually
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Basic Information -->
                <div>
                    <h3 class="modal-form-heading">Basic Information</h3>
                    
                    <!-- Description -->
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Description <span style="color: var(--danger-color);">*</span>
                        </label>
                        <input type="text" name="descr" required placeholder="My Server Certificate"
                               class="modal-form-input">
                    </div>
                    
                    <!-- Certificate Type -->
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Type <span style="color: var(--danger-color);">*</span>
                        </label>
                        <select id="cert-type" name="cert_type" required onchange="updateCertTypeHints(this.value)"
                                class="modal-form-input">
                            <option value="server_cert">Server Certificate</option>
                            <option value="client_cert">Client Certificate</option>
                            <option value="combined_cert">Combined Client/Server Certificate</option>
                            <option value="ca_cert">Certificate Authority (Intermediate)</option>
                        </select>
                        <p id="cert-type-hint" style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            For web servers, VPNs, and other services
                        </p>
                    </div>
                    
                    <!-- Private Key Location -->
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Private Key Location <span style="color: var(--danger-color);">*</span>
                        </label>
                        <select name="private_key_location"
                                class="modal-form-input">
                            <option value="stored">Store private key in UCM</option>
                            <option value="download_only">Download only (not stored)</option>
                        </select>
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            For higher security, download the private key and do not store it in UCM
                        </p>
                    </div>
                </div>
                
                <!-- Key Configuration -->
                <div>
                    <h3 class="modal-form-heading">Key Configuration</h3>
                    
                    <div class="modal-form-grid-2">
                        <div>
                            <label class="modal-form-label">
                                Key Type <span style="color: var(--danger-color);">*</span>
                            </label>
                            <select id="cert-key-type" name="key_type" required
                                    class="modal-form-input">
                                <option value="2048">RSA 2048</option>
                                <option value="4096">RSA 4096</option>
                                <option value="prime256v1">EC P-256</option>
                                <option value="secp384r1">EC P-384</option>
                            </select>
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Digest Algorithm <span style="color: var(--danger-color);">*</span>
                            </label>
                            <select id="cert-digest" name="digest_alg"
                                    class="modal-form-input">
                                <option value="sha256">SHA-256</option>
                                <option value="sha384">SHA-384</option>
                                <option value="sha512">SHA-512</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <!-- Issuer -->
                <div>
                    <h3 class="modal-form-heading">Issuer</h3>
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Certificate Authority <span style="color: var(--danger-color);">*</span>
                        </label>
                        <select name="caref" required id="ca-select"
                                class="modal-form-input">
                            <option>Loading CAs...</option>
                        </select>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Lifetime (days) <span style="color: var(--danger-color);">*</span>
                        </label>
                        <input id="cert-lifetime" type="number" name="lifetime" value="397" required min="1" max="36500"
                               class="modal-form-input">
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            Maximum 397 days for publicly-trusted certificates. 825 days for internal use.
                        </p>
                    </div>
                </div>
                
                <!-- Distinguished Name -->
                <div>
                    <h3 class="modal-form-heading">Distinguished Name (DN)</h3>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="modal-form-label">
                                Country Code
                            </label>
                            <input id="cert-country" type="text" name="country" placeholder="FR" maxlength="2"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                State or Province
                            </label>
                            <input id="cert-state" type="text" name="state" placeholder="Occitanie"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                City
                            </label>
                            <input id="cert-city" type="text" name="city" placeholder="Montpellier"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Organization
                            </label>
                            <input id="cert-org" type="text" name="organization" placeholder="My Company"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Organizational Unit
                            </label>
                            <input id="cert-ou" type="text" name="organizational_unit" placeholder="IT"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Email Address
                            </label>
                            <input id="cert-email" type="email" name="email" placeholder="admin@example.com"
                                   class="modal-form-input">
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <label class="modal-form-label">
                            Common Name (CN) <span style="color: var(--danger-color);">*</span>
                        </label>
                        <input type="text" name="common_name" required placeholder="server.example.com"
                               class="modal-form-input">
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            The primary identifier (FQDN for servers, name for users)
                        </p>
                    </div>
                </div>
                
                <!-- Alternative Names -->
                <div>
                    <h3 class="modal-form-heading">Alternative Names (SAN)</h3>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            DNS Domain Names (one per line)
                        </label>
                        <textarea name="san_dns" rows="3" placeholder="www.example.com&#10;mail.example.com&#10;*.example.com"
                                  class="form-input" style="width: 100%; font-family: monospace; font-size: 0.875rem; padding: 0.5rem 0.75rem; border: 1px solid var(--border-color); border-radius: 0.5rem; background: var(--card-bg); color: var(--text-primary);"></textarea>
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            Additional DNS names this certificate is valid for (wildcards supported)
                        </p>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            IP Addresses (one per line)
                        </label>
                        <textarea name="san_ip" rows="2" placeholder="192.168.1.1&#10;10.0.0.1"
                                  class="form-input" style="width: 100%; font-family: monospace; font-size: 0.875rem; padding: 0.5rem 0.75rem; border: 1px solid var(--border-color); border-radius: 0.5rem; background: var(--card-bg); color: var(--text-primary);"></textarea>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Email Addresses (one per line)
                        </label>
                        <textarea id="san-email-input" name="san_email" rows="3" placeholder="user@example.com&#10;admin@example.com"
                                  class="form-input" style="width: 100%; font-family: monospace; font-size: 0.875rem; padding: 0.5rem 0.75rem; border: 1px solid var(--border-color); border-radius: 0.5rem; background: var(--card-bg); color: var(--text-primary);"></textarea>
                        <div id="san-email-validation" style="margin-top: 0.5rem; font-size: 0.75rem;"></div>
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            For S/MIME certificates: enter recipient email addresses
                        </p>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            URIs (one per line)
                        </label>
                        <textarea name="san_uri" rows="2" placeholder="https://example.com/resource"
                                  class="form-input" style="width: 100%; font-family: monospace; font-size: 0.875rem; padding: 0.5rem 0.75rem; border: 1px solid var(--border-color); border-radius: 0.5rem; background: var(--card-bg); color: var(--text-primary);"></textarea>
                    </div>
                </div>
                
                <!-- OCSP -->
                <div>
                    <h3 class="modal-form-heading">OCSP (Optional)</h3>
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            OCSP URI
                        </label>
                        <input type="url" name="ocsp_uri" id="ocsp-uri-input" placeholder="http://ocsp.example.com"
                               class="modal-form-input">
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            URL where the OCSP responder can be reached for certificate status checking
                        </p>
                    </div>
                </div>
                
            </div>
            
            <div class="modal-form-footer">
                <button type="button" data-action="close-cert-modal"
                        class="btn-secondary">
                    Cancel
                </button>
                <button type="submit"
                        class="btn-primary">
                    <svg class="ucm-icon" width="16" height="16"><use href="#icon-plus"/></svg>
                    Create Certificate
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Generate CSR Modal -->
<div id="csrModal" class="hidden" style="position: fixed; inset: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;">
    <div onclick="event.stopPropagation()" style="background: var(--card-bg); border-radius: 0.5rem; max-width: 750px; width: 90%; max-height: 90vh; overflow-y: auto; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.25);">
        <div class="card-header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h2 style="font-size: 1.5rem; font-weight: bold; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                    <svg class="ucm-icon" width="24" height="24"><use href="#icon-file-signature"/></svg>
                    <span>Generate CSR</span>
                </h2>
                <button data-action="close-csr-modal" style="color: var(--text-secondary); cursor: pointer; background: none; border: none;">
                    <svg class="ucm-icon" width="20" height="20"><use href="#icon-times"/></svg>
                </button>
            </div>
        </div>
        
        <form hx-post="/api/ui/cert/csr" 
              hx-trigger="submit"
              hx-disabled-elt="find button[type='submit']"
              hx-on::after-request="if(event.detail.successful){closeCSRModal();htmx.trigger('body','refreshCerts');if(typeof showToast==='function')showToast('CSR generated successfully','success');}">
            <div style="padding: 1.5rem;">
                
                <!-- Template Selection (Optional) -->
                <div style="margin-bottom: 1.5rem; padding: 1rem; background: var(--info-bg, rgba(59, 130, 246, 0.1)); border-left: 4px solid var(--info-color, #3b82f6); border-radius: 0.375rem;">
                    <div style="display: flex; align-items: start; gap: 0.5rem;">
                        <svg class="ucm-icon" width="20" height="20" style="margin-top: 0.125rem; flex-shrink: 0;"><use href="#icon-info-circle"/></svg>
                        <div style="flex: 1;">
                            <h3 style="font-weight: 600; color: var(--text-primary); margin: 0 0 0.5rem 0; font-size: 0.875rem;">Use a Template (Optional)</h3>
                            <select id="csr-template-select" onchange="applyCSRTemplate(this.value)"
                                    class="modal-form-input" style="margin-bottom: 0.5rem;">
                                <option value="">-- Loading templates... --</option>
                            </select>
                            <p style="margin: 0; font-size: 0.75rem; color: var(--text-muted);">
                                Select a template to auto-fill fields, or leave empty for manual configuration
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Basic Information -->
                <div>
                    <h3 class="modal-form-heading">Basic Information</h3>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Description <span style="color: var(--danger-color);">*</span>
                        </label>
                        <input type="text" id="csr-descr" name="descr" required placeholder="My CSR for external CA"
                               class="modal-form-input">
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            Internal identifier for this CSR
                        </p>
                    </div>
                </div>
                
                <!-- Key Configuration -->
                <div>
                    <h3 class="modal-form-heading">Key Configuration</h3>
                    
                    <div class="modal-form-grid-2">
                        <div>
                            <label class="modal-form-label">
                                Key Type <span style="color: var(--danger-color);">*</span>
                            </label>
                            <select id="csr-key-type" name="key_type" required
                                    class="modal-form-input">
                                <option value="2048">RSA 2048</option>
                                <option value="4096" selected>RSA 4096</option>
                                <option value="prime256v1">EC P-256</option>
                                <option value="secp384r1">EC P-384</option>
                            </select>
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Digest Algorithm <span style="color: var(--danger-color);">*</span>
                            </label>
                            <select id="csr-digest" name="digest"
                                    class="modal-form-input">
                                <option value="sha256" selected>SHA-256</option>
                                <option value="sha384">SHA-384</option>
                                <option value="sha512">SHA-512</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <!-- Distinguished Name -->
                <div>
                    <h3 class="modal-form-heading">Distinguished Name (DN)</h3>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Common Name (CN) <span style="color: var(--danger-color);">*</span>
                        </label>
                        <input type="text" id="csr-cn" name="common_name" required placeholder="example.com"
                               class="modal-form-input">
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            Fully Qualified Domain Name (FQDN) or email address
                        </p>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="modal-form-label">
                                Organization (O)
                            </label>
                            <input type="text" id="csr-org" name="organization" placeholder="My Company"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Organizational Unit (OU)
                            </label>
                            <input type="text" id="csr-ou" name="organizational_unit" placeholder="IT Department"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Country Code (C)
                            </label>
                            <input type="text" id="csr-country" name="country" placeholder="FR" maxlength="2"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                State or Province (ST)
                            </label>
                            <input type="text" id="csr-state" name="state" placeholder="Occitanie"
                                   class="modal-form-input">
                        </div>
                        <div>
                            <label class="modal-form-label">
                                Locality / City (L)
                            </label>
                            <input type="text" id="csr-locality" name="locality" placeholder="Montpellier"
                                   class="modal-form-input">
                        </div>
                    </div>
                </div>
                
                <!-- Subject Alternative Names -->
                <div>
                    <h3 class="modal-form-heading">Subject Alternative Names (SAN)</h3>
                    
                    <div style="margin-bottom: 1rem;">
                        <label class="modal-form-label">
                            Alternative Names
                        </label>
                        <textarea id="csr-san" name="altnames" rows="3" placeholder="DNS:www.example.com&#10;DNS:*.example.com&#10;IP:192.168.1.1&#10;EMAIL:admin@example.com"
                                  class="modal-form-input" style="resize: vertical;"></textarea>
                        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: var(--text-muted);">
                            One per line. Format: DNS:name, IP:address, EMAIL:address
                        </p>
                    </div>
                </div>
                
            </div>
            
            <div class="modal-form-footer">
                <button type="button" data-action="close-csr-modal"
                        class="btn-secondary">
                    Cancel
                </button>
                <button type="submit"
                        class="btn-primary">
                    <svg class="ucm-icon" width="16" height="16"><use href="#icon-file-signature"/></svg> Generate CSR
                </button>
            </div>
        </form>
    </div>
</div>

<script>
// Load templates when modals open
document.addEventListener('DOMContentLoaded', function() {
    // Hook into openCSRModal to load templates
    const originalOpenCSRModal = window.openCSRModal;
    window.openCSRModal = function() {
        if (originalOpenCSRModal) originalOpenCSRModal();
        loadCSRTemplates();
    };
    
    // Hook into openCreateCertModal to load templates
    const originalOpenCreateCertModal = window.openCreateCertModal;
    if (originalOpenCreateCertModal) {
        window.openCreateCertModal = function() {
            originalOpenCreateCertModal();
            loadCertTemplates();
        };
    }
});

// Load templates for CSR dropdown (uses fetch-wrapper for JWT auth)
function loadCSRTemplates() {
    const select = document.getElementById('csr-template-select');
    if (!select) return;
    
    fetch('/api/ui/templates/options')
        .then(r => r.text())
        .then(html => {
            select.innerHTML = html;
        })
        .catch(err => {
            console.error('Failed to load templates:', err);
            select.innerHTML = '<option value="">-- Error loading templates --</option>';
        });
}

// Load templates for Create Cert dropdown (uses fetch-wrapper for JWT auth)
function loadCertTemplates() {
    const select = document.getElementById('cert-template-select');
    if (!select) return;
    
    fetch('/api/ui/templates/options')
        .then(r => r.text())
        .then(html => {
            // Prepend "No template" option
            select.innerHTML = '<option value="">-- No template (manual configuration) --</option>' + html;
        })
        .catch(err => {
            console.error('Failed to load templates:', err);
            select.innerHTML = '<option value="">-- Error loading templates --</option>';
        });
}

// Apply template to CSR form
// Note: fetch() is OK here because fetch-wrapper.js auto-injects JWT token
function applyCSRTemplate(templateId) {
    console.log('applyCSRTemplate called with:', templateId);
    
    if (!templateId) {
        // Reset form when "No Template" selected
        document.getElementById('csr-key-type').value = '4096';
        document.getElementById('csr-digest').value = 'sha256';
        return;
    }
    
    console.log('Fetching template:', templateId);
    
    // fetch() is OK because fetch-wrapper.js is loaded and auto-injects JWT
    fetch('/api/ui/templates/' + templateId + '/json')
        .then(r => {
            console.log('Response status:', r.status);
            return r.json();
        })
        .then(template => {
            console.log('Template received:', template);
            
            // Apply key configuration
            const keyType = template.key_type || '4096';
            document.getElementById('csr-key-type').value = keyType;
            
            const digest = template.digest || 'sha256';
            document.getElementById('csr-digest').value = digest;
            
            // Apply DN defaults (but don't overwrite if user already entered something)
            const dn = template.dn_template || {};
            console.log('DN template:', dn);
            
            if (dn.O && !document.getElementById('csr-org').value) {
                const orgValue = dn.O.replace('{username}', '').replace('{email}', '').trim();
                document.getElementById('csr-org').value = orgValue;
