// Apply template to Certificate form
// Note: fetch() is OK here because fetch-wrapper.js auto-injects JWT token
function applyCertTemplate(templateId) {
    console.log('applyCertTemplate called with:', templateId);
    
    if (!templateId) {
        // Reset form when "No Template" selected
        document.getElementById('cert-key-type').value = '2048';
        document.getElementById('cert-digest').value = 'sha256';
        document.getElementById('cert-lifetime').value = '397';
        return;
    }
    
    console.log('Fetching template:', templateId);
    
    // fetch() is OK because fetch-wrapper.js is loaded and auto-injects JWT
    fetch('/api/ui/templates/' + templateId + '/json')
        .then(r => {
            console.log('Response status:', r.status);
            return r.json();
        })
        .then(template => {
            console.log('Template received:', template);
            
            // Apply key configuration
            const keyType = template.key_type || '2048';
            document.getElementById('cert-key-type').value = keyType;
            
            const digest = template.digest || 'sha256';
            document.getElementById('cert-digest').value = digest;
            
            const validityDays = template.validity_days || 397;
            document.getElementById('cert-lifetime').value = validityDays;
            
            // Apply DN defaults (but don't overwrite if user already entered something)
            const dn = template.dn_template || {};
            console.log('DN template:', dn);
            
            if (dn.O && !document.getElementById('cert-org').value) {
                const orgValue = dn.O.replace('{username}', '').replace('{email}', '').replace('{hostname}', '').trim();
                document.getElementById('cert-org').value = orgValue;
            }
            if (dn.OU && !document.getElementById('cert-ou').value) {
                const ouValue = dn.OU.replace('{username}', '').replace('{email}', '').replace('{hostname}', '').trim();
                document.getElementById('cert-ou').value = ouValue;
            }
            if (dn.C && !document.getElementById('cert-country').value) {
                document.getElementById('cert-country').value = dn.C;
            }
            if (dn.ST && !document.getElementById('cert-state').value) {
                document.getElementById('cert-state').value = dn.ST;
            }
            if (dn.L && !document.getElementById('cert-city').value) {
                document.getElementById('cert-city').value = dn.L;
            }
            
            // Suggest cert_type based on template type
            const typeMapping = {
                'web_server': 'server_cert',
                'email': 'client_cert',
                'vpn_server': 'server_cert',
                'vpn_client': 'client_cert',
                'code_signing': 'client_cert',
                'client_auth': 'client_cert'
            };
            const suggestedType = typeMapping[template.template_type];
            if (suggestedType) {
                document.getElementById('cert-type').value = suggestedType;
                updateCertTypeHints(suggestedType);
            }
            
            // Show toast
            if (typeof showToast === 'function') {
                showToast(`Template "${template.name}" applied`, 'success');
            }
        })
        .catch(err => {
            console.error('Failed to load template:', err);
            if (typeof showToast === 'function') {
                showToast('Failed to load template', 'error');
            }
        });
}

// ============================================================================
// EMAIL VALIDATION (RFC 5322 simplified)
// ============================================================================

// RFC 5322 simplified email validation regex
// More permissive than full spec but catches 99% of real emails
const EMAIL_REGEX = /^[a-zA-Z0-9.!#$%&'*+\/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;

function validateEmail(email) {
    return EMAIL_REGEX.test(email.trim());
}

function validateSANEmails() {
    const textarea = document.getElementById('san-email-input');
    const feedback = document.getElementById('san-email-validation');
    
    if (!textarea || !feedback) return;
    
    const value = textarea.value.trim();
    
    // Empty is valid (optional field)
    if (!value) {
        feedback.innerHTML = '';
        textarea.style.borderColor = 'var(--border-color)';
        return;
    }
    
    const lines = value.split('\n').map(line => line.trim()).filter(line => line);
    const validEmails = [];
    const invalidEmails = [];
    
    lines.forEach(email => {
        if (validateEmail(email)) {
            validEmails.push(email);
        } else {
            invalidEmails.push(email);
        }
    });
    
    // Build feedback HTML
    let html = '';
    
    if (validEmails.length > 0) {
        html += `<div style="color: var(--success-color); display: flex; align-items: center; gap: 0.25rem;">
            <svg class="ucm-icon" width="14" height="14"><use href="#icon-check-circle"/></svg>
            <span>${validEmails.length} valid email${validEmails.length > 1 ? 's' : ''}</span>
        </div>`;
    }
    
    if (invalidEmails.length > 0) {
        html += `<div style="color: var(--danger-color); display: flex; align-items: start; gap: 0.25rem; margin-top: 0.25rem;">
            <svg class="ucm-icon" width="14" height="14" style="margin-top: 0.125rem;"><use href="#icon-exclamation-circle"/></svg>
            <div>
                <div>${invalidEmails.length} invalid email${invalidEmails.length > 1 ? 's' : ''}:</div>
                <div style="font-family: monospace; font-size: 0.7rem; margin-top: 0.125rem;">
                    ${invalidEmails.map(e => `â€¢ ${e}`).join('<br>')}
                </div>
            </div>
        </div>`;
        textarea.style.borderColor = 'var(--danger-color)';
    } else {
        textarea.style.borderColor = 'var(--success-color)';
    }
    
    feedback.innerHTML = html;
}

// Attach email validation on input
document.addEventListener('DOMContentLoaded', function() {
    const emailInput = document.getElementById('san-email-input');
    if (emailInput) {
        emailInput.addEventListener('input', validateSANEmails);
        emailInput.addEventListener('blur', validateSANEmails);
    }
});
</script>

