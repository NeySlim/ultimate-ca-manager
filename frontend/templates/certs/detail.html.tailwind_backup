<script>
let pkcs12ExportId = null;
let pkcs12ExportType = null;

// Load fingerprints and details on page load
document.addEventListener('DOMContentLoaded', function() {
    loadFingerprints();
    loadX509Details();
});

function loadFingerprints() {
    const token = '{{ session.get("access_token") }}';
    fetch('/api/v1/certificates/{{ cert.id }}/fingerprints', {
        headers: { 'Authorization': `Bearer ${token}` }
    })
    .then(response => response.json())
    .then(data => {
        const html = `
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500">SHA-256</dt>
                    <dd class="mt-1 text-xs text-gray-900 font-mono break-all bg-gray-50 p-2 rounded">${data.sha256}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">SHA-1</dt>
                    <dd class="mt-1 text-xs text-gray-900 font-mono break-all bg-gray-50 p-2 rounded">${data.sha1}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">MD5</dt>
                    <dd class="mt-1 text-xs text-gray-900 font-mono break-all bg-gray-50 p-2 rounded">${data.md5}</dd>
                </div>
            </dl>
        `;
        document.getElementById('fingerprints-section').innerHTML = html;
    })
    .catch(error => {
        document.getElementById('fingerprints-section').innerHTML = '<p class="text-red-500">Failed to load fingerprints</p>';
    });
}

function loadX509Details() {
    const token = '{{ session.get("access_token") }}';
    fetch('/api/v1/certificates/{{ cert.id }}/details', {
        headers: { 'Authorization': `Bearer ${token}` }
    })
    .then(response => response.json())
    .then(data => {
        let html = '<div class="space-y-4">';
        
        // Public Key Info
        if (data.public_key) {
            html += `
                <div>
                    <h3 class="font-semibold text-gray-900 mb-2">Public Key</h3>
                    <dl class="ml-4 space-y-1">
                        <div class="flex">
                            <dt class="text-sm font-medium text-gray-500 w-32">Algorithm:</dt>
                            <dd class="text-sm text-gray-900">${data.public_key.algorithm}</dd>
                        </div>
                        ${data.public_key.key_size ? `
                        <div class="flex">
                            <dt class="text-sm font-medium text-gray-500 w-32">Key Size:</dt>
                            <dd class="text-sm text-gray-900">${data.public_key.key_size} bits</dd>
                        </div>` : ''}
                        ${data.public_key.curve ? `
                        <div class="flex">
                            <dt class="text-sm font-medium text-gray-500 w-32">Curve:</dt>
                            <dd class="text-sm text-gray-900">${data.public_key.curve}</dd>
                        </div>` : ''}
                    </dl>
                </div>
            `;
        }
        
        // Extensions
        if (data.extensions && Object.keys(data.extensions).length > 0) {
            html += '<div><h3 class="font-semibold text-gray-900 mb-2">X.509 Extensions</h3>';
            for (const [name, ext] of Object.entries(data.extensions)) {
                // Special handling for OPNsense extensions
                let displayName = name;
                if (ext.display_name) {
                    displayName = ext.display_name;
                }
                
                html += `<div class="ml-4 mb-3 p-3 bg-gray-50 rounded">`;
                
                // Add OID badge for OPNsense extensions
                if (ext.oid) {
                    html += `<div class="font-medium text-sm text-gray-900">
                        ${displayName} 
                        ${ext.critical ? '<span class="text-red-500">(Critical)</span>' : ''}
                        <span class="ml-2 px-2 py-0.5 bg-blue-100 text-blue-800 text-xs rounded">OID: ${ext.oid}</span>
                    </div>`;
                } else {
                    html += `<div class="font-medium text-sm text-gray-900">${displayName} ${ext.critical ? '<span class="text-red-500">(Critical)</span>' : ''}</div>`;
                }
                
                if (ext.values && Array.isArray(ext.values)) {
                    html += '<ul class="mt-1 ml-4 text-sm text-gray-700 list-disc">';
                    ext.values.forEach(v => html += `<li>${v}</li>`);
                    html += '</ul>';
                } else if (ext.ca !== undefined) {
                    html += `<div class="mt-1 text-sm text-gray-700">CA: ${ext.ca ? 'Yes' : 'No'}`;
                    if (ext.path_length !== null) html += `, Path Length: ${ext.path_length}`;
                    html += '</div>';
                } else if (ext.value !== undefined) {
                    html += `<div class="mt-1 text-sm text-gray-700 font-mono break-all">${ext.value}</div>`;
                }
                html += '</div>';
            }
            html += '</div>';
        }
        
        html += '</div>';
        document.getElementById('x509-details').innerHTML = html;
    })
    .catch(error => {
        document.getElementById('x509-details').innerHTML = '<p class="text-red-500">Failed to load certificate details</p>';
    });
}

function toggleExportMenu() {
    const menu = document.getElementById('export-menu');
    menu.classList.toggle('hidden');
}

// Close menu when clicking outside
document.addEventListener('click', function(event) {
    const menu = document.getElementById('export-menu');
    const button = event.target.closest('button');
    if (!button || button.textContent.indexOf('Export') === -1) {
        if (!menu.classList.contains('hidden')) {
            menu.classList.add('hidden');
        }
    }
});

function exportCertSimple(certId) {
    exportWithToken(`/api/v1/certificates/${certId}/export/advanced?format=pem`);
}

function exportCertWithKey(certId) {
    exportWithToken(`/api/v1/certificates/${certId}/export/advanced?format=pem&key=true`);
}

function exportCertWithChain(certId) {
    exportWithToken(`/api/v1/certificates/${certId}/export/advanced?format=pem&chain=true`);
}

function exportCertFull(certId) {
    exportWithToken(`/api/v1/certificates/${certId}/export/advanced?format=pem&key=true&chain=true`);
}

function exportCertDER(certId) {
    exportWithToken(`/api/v1/certificates/${certId}/export/advanced?format=der`);
}

function revokeCert(certId) {
    if (!confirm('Are you sure you want to revoke this certificate? This action cannot be undone.')) {
        return;
    }
    
    const token = '{{ session.get("access_token") }}';
    fetch(`/api/v1/certificates/${certId}/revoke`, {
        method: 'POST',
        headers: { 
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ reason: 'unspecified' })
    })
    .then(response => response.json())
    .then(data => {
        if (data.error) {
            alert('Failed to revoke certificate: ' + data.error);
        } else {
            alert('Certificate revoked successfully');
            location.reload();
        }
    })
    .catch(error => {
        alert('Failed to revoke certificate: ' + error.message);
    });
}

function showPKCS12Modal(id, type) {
    pkcs12ExportId = id;
    pkcs12ExportType = type;
    document.getElementById('pkcs12-password').value = '';
    document.getElementById('pkcs12-password-confirm').value = '';
    document.getElementById('pkcs12-error').classList.add('hidden');
    document.getElementById('pkcs12-modal').classList.remove('hidden');
}

function closePKCS12Modal() {
    document.getElementById('pkcs12-modal').classList.add('hidden');
}

function exportPKCS12() {
    const password = document.getElementById('pkcs12-password').value;
    const confirm = document.getElementById('pkcs12-password-confirm').value;
    const errorDiv = document.getElementById('pkcs12-error');
    
    if (!password) {
        errorDiv.textContent = 'Password is required';
        errorDiv.classList.remove('hidden');
        return;
    }
    
    if (password !== confirm) {
        errorDiv.textContent = 'Passwords do not match';
        errorDiv.classList.remove('hidden');
        return;
    }
    
    if (password.length < 4) {
        errorDiv.textContent = 'Password must be at least 4 characters';
        errorDiv.classList.remove('hidden');
        return;
    }
    
    const url = pkcs12ExportType === 'ca' 
        ? `/api/v1/ca/${pkcs12ExportId}/export/advanced?format=pkcs12&password=${encodeURIComponent(password)}`
        : `/api/v1/certificates/${pkcs12ExportId}/export/advanced?format=pkcs12&password=${encodeURIComponent(password)}`;
    
    exportWithToken(url);
    closePKCS12Modal();
}

function exportWithToken(url) {
    const token = '{{ session.get("access_token") }}';
    fetch(url, {
        headers: { 'Authorization': `Bearer ${token}` }
    })
    .then(response => {
        if (!response.ok) throw new Error('Export failed');
        return response.blob();
    })
    .then(blob => {
        const downloadUrl = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = downloadUrl;
        a.download = ''; // Browser will use filename from Content-Disposition
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(downloadUrl);
    })
    .catch(error => {
        alert('Export failed: ' + error.message);
    });
}
</script>
{% endblock %}
