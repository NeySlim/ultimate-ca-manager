    <!-- Toast Notification Container (Global) - Available everywhere -->
    <div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2"></div>
    
    <!-- Global Toast Function - Available everywhere -->
    <script>
        // ========================================
        // Global Toast Notification Function
        // ========================================
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            if (!container) return;
            
            const toast = document.createElement('div');
            toast.className = 'transform transition-all duration-300 ease-in-out opacity-0 translate-x-full';
            
            const bgColor = type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : type === 'warning' ? 'bg-yellow-500' : 'bg-blue-500';
            const icon = type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';
            
            toast.innerHTML = '<div class="' + bgColor + ' text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 min-w-[300px]">' +
                '<i class="fas ' + icon + ' text-xl"></i>' +
                '<span class="flex-1">' + message + '</span>' +
                '<button onclick="this.parentElement.parentElement.remove()" class="text-white hover:text-gray-200">' +
                    '<i class="fas fa-times"></i>' +
                '</button>' +
            '</div>';
            
            container.appendChild(toast);
            
            setTimeout(function() { toast.classList.remove('opacity-0', 'translate-x-full'); }, 10);
            setTimeout(function() { 
                toast.classList.add('opacity-0', 'translate-x-full');
                setTimeout(function() { toast.remove(); }, 300);
            }, 5000);
        }
    </script>
    
    {% if request.endpoint and request.endpoint != 'ui.login' %}
    <!-- Session Timeout Warning Modal -->
    <div id="sessionTimeoutModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 z-50 flex items-center justify-center">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-md w-full mx-4 p-6 animate-pulse-slow">
            <div class="flex items-center justify-center mb-4">
                <div class="w-16 h-16 rounded-full bg-yellow-100 dark:bg-yellow-900 flex items-center justify-center">
                    <i class="fas fa-clock text-yellow-600 dark:text-yellow-400 text-3xl"></i>
                </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white text-center mb-2">Session Expiring</h3>
            <p class="text-gray-600 dark:text-gray-400 text-center mb-6">
                Vous serez déconnecté dans <span id="timeoutCountdown" class="font-bold text-yellow-600 dark:text-yellow-400">60</span> secondes par inactivité.
            </p>
            <div class="flex space-x-3">
                <button onclick="extendSession()" class="flex-1 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors font-medium">
                    <i class="fas fa-check mr-2"></i>Prolonger la session
                </button>
                <button onclick="logoutNow()" class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors font-medium">
                    <i class="fas fa-arrow-right-from-bracket mr-2"></i>Déconnexion
                </button>
            </div>
        </div>
    </div>
    
    <!-- Session Management Script -->
    <script>
        // ========================================
        // Session timeout configuration
        // ========================================
        const SESSION_TIMEOUT = 30 * 60 * 1000; // 30 minutes in milliseconds
        const WARNING_TIME = 60 * 1000; // Show warning 60 seconds before timeout
        
        var sessionTimer;
        var warningTimer;
        var countdownInterval;
        var lastActivity = Date.now();
        
        // Reset session timers on user activity
        function resetSessionTimer() {
            lastActivity = Date.now();
            clearTimeout(sessionTimer);
            clearTimeout(warningTimer);
            clearInterval(countdownInterval);
            hideTimeoutModal();
            
            // Set timer to show warning
            warningTimer = setTimeout(showTimeoutWarning, SESSION_TIMEOUT - WARNING_TIME);
            
            // Set timer to logout
            sessionTimer = setTimeout(autoLogout, SESSION_TIMEOUT);
        }
        
        // Show timeout warning modal
        function showTimeoutWarning() {
            document.getElementById('sessionTimeoutModal').classList.remove('hidden');
            
            var countdown = 60;
            document.getElementById('timeoutCountdown').textContent = countdown;
            
            countdownInterval = setInterval(function() {
                countdown--;
                document.getElementById('timeoutCountdown').textContent = countdown;
                
                if (countdown <= 0) {
                    clearInterval(countdownInterval);
                    autoLogout();
                }
            }, 1000);
        }
        
        // Hide timeout modal
        function hideTimeoutModal() {
            document.getElementById('sessionTimeoutModal').classList.add('hidden');
        }
        
        // Extend session (user clicked "Yes")
        function extendSession() {
            // Make a simple request to keep session alive
            fetch('/api/health', { credentials: 'include' })
                .then(() => {
                    resetSessionTimer();
                })
                .catch(() => {
                    // If health check fails, redirect to login
                    window.location.href = '/login';
                });
        }
        
        // Auto logout on timeout
        function autoLogout() {
            window.location.href = '/logout';
        }
        
        // Manual logout
        function logoutNow() {
            window.location.href = '/logout';
        }
        
        // Track user activity
        const activityEvents = ['mousedown', 'keydown', 'scroll', 'touchstart', 'click'];
        activityEvents.forEach(function(eventName) {
            document.addEventListener(eventName, resetSessionTimer, true);
        });
        
        // Check session validity on HTMX requests
        document.body.addEventListener('htmx:responseError', function(evt) {
            if (evt.detail.xhr.status === 401 || evt.detail.xhr.status === 403) {
                // Session expired - redirect to login
                window.location.href = '/login?expired=1';
            }
        });
        
        // Check for session expired flag in URL
        window.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('expired') === '1') {
                alert('Votre session a expiré. Veuillez vous reconnecter.');
            }
        });
        
        // Initialize session timer
        resetSessionTimer();
    </script>
    {% endif %}
    
